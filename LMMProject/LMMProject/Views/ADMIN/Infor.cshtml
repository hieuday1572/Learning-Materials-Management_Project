@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="~/css/contact.css">

</head>

<body>

    <div class="banner">
        <div class="navbar">
            <img src="~/image/istockphoto-1138089745-170667a.jpg" class="logo">
            <ul>
                <li><a asp-controller="ADMIN" asp-action="Dashboard">Home</a></li>
            </ul>

        </div>
        <div class="content">
            <h1>Learning Materials Management</h1>
            <p>Personal Information</p>
            <div class="infor">
                <form asp-action="Infor" method="post">
                <label asp-for="UserName">User Name:</label>
                <input asp-for="UserName" readonly class="form-control" placeholder="UserName">
                <br/>
                <label asp-for="Fullname">Fullname:</label>
                <input asp-for="Fullname" class="form-control" placeholder="Fullname">
                <br/>
                <label asp-for="Address">Address:</label>                
                <input asp-for="Address" class="form-control" placeholder="Address">
                <br/>
                <label asp-for="Phone">Phone:</label>
                <input asp-for="Phone" class="form-control" placeholder="Phone">
                <br/>
                <label asp-for="Gender">Gender:</label>
                <input asp-for="Gender" class="form-control" placeholder="Gender">
                <br/>
                <label asp-for="Birthday">Birthday:</label>
                <input asp-for="Birthday" class="form-control" placeholder="Birthday">
                <br/>
                <label asp-for="Role.RoleName">Role name:</label>
                <input asp-for="Role.RoleName"  readonly class="form-control" placeholder="Role">
                <br/>
                <button type="submit">UPDATE</button>
                </form>
            </div>
        </div>


    </div>
</body>
