@model IEnumerable<LMMProject.Models.Account>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css">

</head>
<body>
    <div class="curri-details">
        <div class="navbar">
            <img src="../image/istockphoto-1138089745-170667a.jpg" class="logo">
            <ul>
                <li><a asp-controller="ADMIN" asp-action="Dashboard">Home</a></li>
                <li><a asp-action="Create">Create</a></li>
            </ul>
        </div>
        <div class="content">
            <b>
                <h1>Learning Materials Management</h1>
                <p>Accounts</p>
            </b>

        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (!item.UserName.Equals("admin"))
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(model => item.UserName)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            @if (item.Active == 1)
                            {
                                <td>
                                    Active
                                </td>
                            }
                            else
                            {
                                <td>
                                    Banned
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.Role.RoleName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UserName" class="btn btn-primary">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.UserName" class="btn btn-primary">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.UserName" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        </div>
</body>
</html>
