@model LMMProject.Models.Curriculum

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Curriculum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CurriculumId" />
            <div class="form-group">
                <label asp-for="CurriculumCode" class="control-label"></label>
                <input asp-for="CurriculumCode" class="form-control" readonly/>
                <span asp-validation-for="CurriculumCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameVn" class="control-label"></label>
                <input asp-for="NameVn" class="form-control" />
                <span asp-validation-for="NameVn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameEn" class="control-label"></label>
                <input asp-for="NameEn" class="form-control" />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Decription" class="control-label"></label>
                <input asp-for="Decription" class="form-control" />
                <span asp-validation-for="Decription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DecisionNo" class="control-label"></label>
                <select asp-for="DecisionNo" class="form-control" asp-items="ViewBag.DecisionNo"></select>
                <span asp-validation-for="DecisionNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalCredit" class="control-label"></label>
                <input asp-for="TotalCredit" class="form-control" />
                <span asp-validation-for="TotalCredit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
