@model LMMProject.Models.Session

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Curriculum</h4>
    <hr />
    <div class="row">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span style="color:red"><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LearningTeachingType" class="control-label"></label>
                <input asp-for="LearningTeachingType" class="form-control" />
                <span asp-validation-for="LearningTeachingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentMaterials" class="control-label"></label>
                <input asp-for="StudentMaterials" class="form-control" />
                <span asp-validation-for="StudentMaterials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Constructivequestion" class="control-label"></label>
                <input asp-for="Constructivequestion" class="form-control" />
                <span asp-validation-for="Constructivequestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectCode" class="control-label"></label>
                <select asp-for="SubjectCode" class ="form-control" asp-items="ViewBag.SubjectCode"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
