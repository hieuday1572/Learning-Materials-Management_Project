@model IEnumerable<LMMProject.Models.Session>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/curri-listing.css">
</head>
<body>
    
    <div class="subject">
        <div class="navbar">
            <img src="~/image/istockphoto-1138089745-170667a.jpg" class="logo">
            <ul>
                <li><a asp-controller="ADMIN" asp-action="Dashboard">Home</a></li>
                <li><a asp-action="Create">Create New</a></li>
            </ul>
        </div>
        <div class="content">
            <b>
                <h1>Learning Materials Management</h1>
                <p>Sessions List</p>
            </b>
        </div>
        <div class="search-bar">
            <form asp-action="Search" method="get">
                <input type="text" name="searchText" placeholder="Search...">
                <button type="submit">Search</button>
            </form>
        </div>
        <table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningTeachingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentMaterials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConstructiveQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearningTeachingType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentMaterials)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConstructiveQuestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SessionId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.SessionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
