@model List<LMMProject.Models.Session>
@inject IHttpContextAccessor Accessor
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/session-index.css">
</head>
<body>
    <div class="curri-details">
        <div class="subject">
            <div class="navbar">
                <img src="~/image/istockphoto-1138089745-170667a.jpg" class="logo">
                <ul>
                    @if (Accessor.HttpContext.Session.GetString("Username") != null)
                    {

                            <li><a asp-controller="UserHome" asp-action="Index">Home</a></li>
                        
                    }
                    else
                    {
                        
                            <li><a asp-controller="Login" asp-action="Index">Back</a></li>
                        
                    }
                </ul>
            </div>
            <div class="content">
                <b>
                    <h1>Learning Materials Management</h1>
                    <p>Session List</p>
                </b>
                <div class="search-box">
                    <form action="/SearchSession/Search">
                        <input class="input-box" name="subjectCode" placeholder="Enter Subject Code" />
                        <button class="search" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
            </div>
            <style>

            </style>
            <div class="row" style="margin: 73px !important;">
                <div class="col-12">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Session ID
                                </th>
                                <th>
                                    Subject Code
                                </th>
                                <th>
                                    Topic
                                </th>
                                <th>
                                    Learning Teaching Type
                                </th>
                                <th>
                                    Student Materials
                                </th>
                                <th>
                                    Constructive Question
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.SessionId
                                    </td>
                                    <td>
                                        @item.SubjectCode
                                    </td>
                                    <td>
                                        @item.Topic
                                    </td>
                                    <td>
                                        @item.LearningTeachingType
                                    </td>
                                    <td>
                                        @item.StudentMaterials
                                    </td>
                                    <td>
                                        @item.Constructivequestion
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

</body>
</html>